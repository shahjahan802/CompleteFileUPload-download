@model FileUpload26MayTest.Models.FormTable

@{
    ViewData["Title"] = "FileMediaCreate";
}

<h2>FileMediaCreate</h2>
@if (ViewBag.Message != null && ViewBag.Message != "")
{

    <h4>@ViewBag.Message</h4>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FileMediaCreate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilePath" class="control-label"></label>
                <input  class="form-control" name="FilePicture" multiple  id="FilePicture" type="file" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileDownload" class="control-label"></label>
                <input  class="form-control" name="FileDownload"  id="FileDownload" type="file" />
                <span asp-validation-for="FileDownload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
